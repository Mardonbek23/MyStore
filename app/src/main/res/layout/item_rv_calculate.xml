<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="1"
    android:backgroundTint="@color/white"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/id"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:gravity="right|center_vertical"
        android:maxLines="1"
        android:padding="5dp"
        android:text="â„–"
        android:textColor="@color/main_text_color"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:padding="5dp"
        android:text="Name"
        android:textColor="@color/main_text_color"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/tv_bought_price"
        android:layout_width="100dp"
        android:layout_height="27dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/style_null"
        android:digits="0123456789"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="right|center_vertical"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:padding="5dp"
        android:text="1 500 000"
        android:textColor="@color/main_text_color"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_tax_price"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_gravity="center_vertical"
        android:gravity="right|center_vertical"
        android:maxLines="1"
        android:padding="5dp"
        android:ellipsize="end"
        android:text="150 000"
        android:textColor="@color/main_text_color"
        android:textSize="14dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_total_tax_price"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_gravity="center_vertical"
        android:gravity="right|center_vertical"
        android:maxLines="1"
        android:padding="5dp"
        android:ellipsize="end"
        android:text="150 000"
        android:textColor="@color/main_text_color"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_min_price"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/style_null"
        android:digits="0123456789"
        android:ellipsize="end"
        android:gravity="right|center_vertical"
        android:maxLines="1"
        android:padding="5dp"
        android:text="150 000"
        android:textColor="@color/main_text_color"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_marginLeft="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/minus_btn"
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="0dp"
            android:text="-"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/quantity"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:background="@drawable/style_null"
            android:digits="0123456789"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="0"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:maxLines="1"
            android:textSize="15dp" />

        <Button
            android:id="@+id/plus_btn"
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="0dp"
            android:text="+"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/tv_total_price"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/style_null"
        android:digits="0123456789"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="right|center_vertical"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:padding="5dp"
        android:text="150 000"
        android:textColor="@color/main_text_color"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_benefit"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/style_null"
        android:digits="0123456789"
        android:ellipsize="end"
        android:gravity="right|center_vertical"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:padding="5dp"
        android:text="150 000"
        android:textColor="@color/main_text_color"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_old_price"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/style_null"
        android:digits="0123456789"
        android:ellipsize="end"
        android:gravity="right|center_vertical"
        android:maxLines="1"
        android:padding="5dp"
        android:text="150 000"
        android:textColor="@color/main_text_color"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/remove_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_close"
        app:tint="@color/red_color" />
</LinearLayout>