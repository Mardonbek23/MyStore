<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main_screen.FragmentCalculate">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <HorizontalScrollView
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/bookmark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_bookmark"
                                app:tint="@color/main_text_color" />
                            <LinearLayout
                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_corner_1_grey"
                                android:gravity="bottom"
                                android:orientation="horizontal"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">

                                <EditText
                                    android:id="@+id/tax_price"
                                    android:layout_width="95dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/style_null"
                                    android:digits="0123456789"
                                    android:ellipsize="end"
                                    android:gravity="right|center_vertical"
                                    android:hint="Tax price      "
                                    android:imeOptions="actionDone"
                                    android:inputType="numberDecimal"
                                    android:maxLength="9"
                                    android:maxLines="1"
                                    android:padding="5dp"
                                    android:textColor="@color/main_text_color"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:text="UZS"
                                    android:textColor="@color/main_text_color"
                                    android:textSize="13dp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_corner_1_grey"
                                android:gravity="bottom"
                                android:orientation="horizontal"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">

                                <EditText
                                    android:layout_width="95dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/style_null"
                                    android:digits="0123456789"
                                    android:ellipsize="end"
                                    android:gravity="right|center_vertical"
                                    android:hint="Tax price      "
                                    android:imeOptions="actionDone"
                                    android:inputType="numberDecimal"
                                    android:maxLength="9"
                                    android:maxLines="1"
                                    android:padding="5dp"
                                    android:textColor="@color/main_text_color"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:text="UZS"
                                    android:textColor="@color/main_text_color"
                                    android:textSize="13dp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_corner_1_grey"
                                android:gravity="bottom"
                                android:orientation="horizontal"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">

                                <EditText
                                    android:layout_width="95dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/style_null"
                                    android:digits="0123456789"
                                    android:ellipsize="end"
                                    android:gravity="right|center_vertical"
                                    android:hint="Tax price      "
                                    android:imeOptions="actionDone"
                                    android:inputType="numberDecimal"
                                    android:maxLength="9"
                                    android:maxLines="1"
                                    android:padding="5dp"
                                    android:textColor="@color/main_text_color"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:text="UZS"
                                    android:textColor="@color/main_text_color"
                                    android:textSize="13dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>
                    </HorizontalScrollView>



                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="45dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:ellipsize="end"
                                    android:gravity="right|center_vertical"
                                    android:maxLines="1"
                                    android:padding="5dp"
                                    android:text="â„–"
                                    android:textColor="@color/main_text_color"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:ellipsize="end"
                                    android:gravity="left|center_vertical"
                                    android:maxLines="1"
                                    android:padding="5dp"
                                    android:text="Name"
                                    android:textColor="@color/main_text_color"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/tv_bought_price"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/style_null"
                                    android:gravity="right"
                                    android:maxLines="1"
                                    android:padding="5dp"
                                    android:text="Bought pr x1"
                                    android:textColor="@color/main_text_color"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_tax_price"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/style_null"
                                    android:gravity="right"
                                    android:maxLines="1"
                                    android:padding="5dp"
                                    android:text="Tax pr x1"
                                    android:textColor="@color/main_text_color"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/tv_total_tax_price"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/style_null"
                                    android:gravity="right"
                                    android:maxLines="1"
                                    android:padding="5dp"
                                    android:text="Total tax pr"
                                    android:textColor="@color/main_text_color"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_min_price"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/style_null"
                                    android:ellipsize="end"
                                    android:gravity="right"
                                    android:maxLines="1"
                                    android:padding="5dp"
                                    android:text="Min price"
                                    android:textColor="@color/main_text_color"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:gravity="center"
                                    android:text="Quantity"
                                    android:textColor="@color/main_text_color"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_total_price"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/style_null"
                                    android:gravity="right"
                                    android:maxLines="1"
                                    android:padding="5dp"
                                    android:text="Price"
                                    android:textColor="@color/main_text_color"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_benefit"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/style_null"
                                    android:ellipsize="end"
                                    android:gravity="right"
                                    android:maxLines="1"
                                    android:padding="5dp"
                                    android:text="Benefit"
                                    android:textColor="@color/main_text_color"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_old_price"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/style_null"
                                    android:ellipsize="end"
                                    android:gravity="right"
                                    android:maxLines="1"
                                    android:padding="5dp"
                                    android:text="Old price"
                                    android:textColor="@color/main_text_color"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:background="@color/main_text_color" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                        </LinearLayout>

                    </HorizontalScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/delete_calc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/red_color"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Delete"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/make_calc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1.3"
                            android:backgroundTint="@color/gray_1x"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Calc"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/apply_calc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/main_text_color"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Apply"
                            android:textAllCaps="false" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>